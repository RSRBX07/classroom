<!DOCTYPE html>
<html>
  <head>
    <title>
      <% if @student != nil %>
        <%= @student.name %>
      <% else %>
        Gestion Cours
      <% end %>
    </title>

    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="header">
      <div class="row">

        <div class="col-sm-1">
          <!-- Logo -->
        </div> 

        <div class="col-sm-1">
          <h4><%= link_to 'Accueil', students_path %></h4>
        </div>   

      </div>
    </header>

    <p id="error"><%= flash[:error] %></p>
    <p id="notice"><%= flash[:notice] %></p>

    <%= yield %>
  </body>
</html>
