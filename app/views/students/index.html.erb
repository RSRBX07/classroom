

<!-- Partie haute -->
<div class="up">
  <div class="jumbotron">
    <div class="container">
      <h1>Gestion des cours</h1>
      <h4><%= Student.count %> élèves sont actuellement inscrits</h4>
    </div>
  </div>
</div>

<div class="row">
<!-- Colonne de gauche -->
  <div class="col-sm-8">
    <div class="container">
      <h2> Liste des cours <small><%= link_to "- Créer cours", new_course_path %></small</h2>
      <!-- Tableau des cours -->
      <table class="table table-striped">

        <thead>
          <tr>
            <th>Matière</th>
            <th>Professeur</th>
            <th>Etudiants inscrits</th>
            <th>Accès</th>
          </tr>
        </thead>

        <tbody>
        
          <% @courses.ordered_by_last_created.each do |course| %>
            <tr>
              <th><%= course.field %></th>
              <th><%= course.teacher %></th>
              <th><%= course.students.count %></th>
              <th><%= link_to('Gérer cours', setup_courses_path(course.id)) %></th>
            </tr>
          <% end %>
        </tbody>

      </table>
    </div>
  </div>

<!-- Colonne de droite -->
  <div class="col-sm-4">
    <h2> Etudiants <small><%= link_to '- Créer étudiant', new_student_path %></small></h2>

    <%= render @students.limit 7 %>
    <div "draw_more">
      Voir <%=  Student.count - 7%> autres étudiants<!--Make a sytem to setup limit-->
    </div>
    
  </div>
</div>

