

<!-- Partie haute -->
<div class="up">
  <div class="jumbotron">
    <div class="container">
      <h1>Gestion des cours</h1>
      <h4><%= Student.count %> élèves sont actuellement inscrits</h4>
      <div class="btn btn-primary btn-lg"><%= link_to 'Créer étudiant', new_student_path %></div>
    </div>
  </div>
</div>

<div class="row">
<!-- Colonne de gauche -->
  <div class="col-sm-8">
    <div class="container">
      <h2> Liste des cours </h2>
      <!-- Tableau des cours -->
      <table class="table table-striped">

        <thead>
          <tr>
            <th>Matière</th>
            <th>Professeur</th>
            <th>Etudiants inscrits</th>
          </tr>
        </thead>

        <tbody>
          <% @courses.each do |course| %>
            <tr>
              <th><%= course.field %></th>
              <th><%= course.teacher %></th>
              <th><%= course.students.count %></th>
            </tr>
          <% end %>
        </tbody>

      </table>
    </div>
  </div>

<!-- Colonne de droite -->
  <div class="col-sm-4">
    <h2> Etudiants </h2>

    <!-- Affichage du profil des étudiants -->
    <% @students.each do |student| %>
      <div class="student">
        <div class="row">

          <!-- Photo -->
          <div class="col-sm-2">
              <img src=<%= student.picture %> title=<%= student.name %> class="img-circle">
          </div>
          
          <!-- Nom -->
          <div class="col-sm-9">
            <h1><%= link_to(student.name, student_profile_path(student.id)) %>

            <!-- Inscription au cours -->
            <div class= "container">
              <% if student.course != nil %>
                <h4>Est actuellement inscrit au cours de <%= student.course.field %></h4>
              <% else %>
                <h4>N'est actuellement inscrit à aucun cours</h4>
              <% end %>
            </div>
          </div>


          <!--Delete-->
          <div class="col-sm-1">
            <div class="container">
              <%= link_to 'X', student, method: :delete, data: { confirm: 'Are you sure?' } %>
            </div>
          </div>
        
        </div>
      </div>

      <br>
    <% end %>
  </div>
</div>

